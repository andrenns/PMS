<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckConnectionActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@id/camera_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="43dp"
        android:gravity="center"
        android:text="If your device's name changed, please insert it here"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/camera_ssid"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/camera_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="119dp"
        android:hint="Camera Name"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <Button
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camera_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button"
        android:text="Update\nCamera Name"
        android:textColor="@android:color/white"
        android:onClick="updateCameraName"/>

    <TextView
        android:id="@+id/make_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="Please make sure you're connected to your device's wifi"
        android:textColor="@android:color/white"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="101dp"
        android:layout_marginRight="101dp"
        android:layout_marginBottom="186dp"
        android:gravity="center"
        android:text="1.Go to Phone settings\n2.Choose WiFi settings\n3.Choose your Camera WiFi\n4.Enter Credentials\n5.Return to the App "
        android:textColor="@android:color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/device_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="132dp"
        android:text="Not connected yet"
        android:textColor="@android:color/white"
        android:textSize="15dp" />

    <Button
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:background="@drawable/button"
        android:onClick="buttonStartClean"
        android:text="Start Saving the Ocean"
        android:textColor="@android:color/white" />


</RelativeLayout>